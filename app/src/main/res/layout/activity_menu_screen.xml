<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.reganthomas.myproject.MenuScreen"
    android:background="#C0C0C0">

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:id="@+id/homeButton"
        android:textColor="#FFFFFF"
        android:background="#3333FF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="About Me"
        android:layout_width="match_parent"
        android:id="@+id/aboutmeButton"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/homeButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Links"
        android:layout_width="match_parent"
        android:id="@+id/linksButton"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/aboutmeButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:text="Expansions"
        android:layout_width="match_parent"
        android:id="@+id/expansionsButton"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/linksButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:text="Age of Mythology"
        android:layout_width="match_parent"
        android:id="@+id/aomButton"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/expansionsButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:text="Age of Empires III"
        android:layout_width="match_parent"
        android:id="@+id/aoe3Button"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/aomButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:text="Age of Empires II"
        android:layout_width="match_parent"
        android:id="@+id/aoe2Button"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/aoe3Button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="Age of Empires"
        android:layout_width="match_parent"
        android:id="@+id/aoe1Button"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/aoe2Button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <Button
        android:text="History"
        android:layout_width="match_parent"
        android:id="@+id/historyButton"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:onClick="onClick"
        android:layout_height="35dp"
        android:layout_above="@+id/aoe1Button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:text="Menu Screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#FF0000"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Age of Empires Mopedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#FF0000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
