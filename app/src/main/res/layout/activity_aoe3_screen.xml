<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aoe3_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.reganthomas.myproject.AOE3Screen"
    android:background="#C0C0C0">

    <TextView
        android:text="Age of Empires III"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/aoe3Header"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#FF0000" />

    <TextView
        android:text="Age of Empires III is based around the time Europeans colonized the Americas. In this game there are 14 possible civilizations to control including British, Spanish, German and Russian."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_below="@+id/aoe3Header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

    <TextView
        android:text="Unlike previous games there is one campaign storyline, split into three acts where you control members of a fictional family across three generations. The storyline crosses the 16th and 18th centuries and involves the Fountain of Youth."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/text2"
        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

    <TextView
        android:text="There are five ages to advance through including the Discovery, Colonial, Fortress, Industrial and Imperial Ages."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text3"
        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

    <ImageView
        app:srcCompat="@drawable/aoe3"
        android:id="@+id/aoe3Image"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_alignTop="@+id/text3"
        android:layout_toEndOf="@+id/aoe3Header"
        android:layout_marginTop="35dp" />

    <Button
        android:text="AOM"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/backButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/aomButton"
        android:onClick="AOM"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:layout_height="40dp" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:id="@+id/backButton"
        android:background="#3333FF"
        android:onClick="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:layout_height="40dp" />

    <Button
        android:text="Units"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/unitsButton"
        android:textColor="#FFFFFF"
        android:background="#3333FF"
        android:onClick="Units"
        android:layout_above="@+id/aomButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />
</RelativeLayout>
