<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.reganthomas.myproject.AboutMeScreen"
    android:background="#C0C0C0">

    <TextView
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/aboutTitle"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#FF0000" />

    <TextView
        android:text="Name: Regan Thomas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/nameText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

    <TextView
        android:text="Age: 24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/ageText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

    <TextView
        android:text="DOB: 04/06/92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/dobText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

    <TextView
        android:text="Home Phone: 07 8295250"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dobText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/homeText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

    <TextView
        android:text="Mobile Phone: 027 320 9226"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/mobileText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

    <TextView
        android:text="Address: 475A Matangi Road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/addressText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:layout_below="@+id/mobileText"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Email: regan040692@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/emailText"
        android:textAppearance="@android:style/TextAppearance.Material.Body2" />

    <Button
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3333FF"
        android:textColor="#FFFFFF"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:onClick="Back (AboutMeScreen)"/>

    <ImageView
        android:layout_width="300dp"
        app:srcCompat="@drawable/portrait"
        android:id="@+id/imageView"
        android:layout_height="180dp"
        android:layout_below="@+id/emailText"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
