<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aoe2_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.reganthomas.myproject.AOE2Screen"
    android:background="#C0C0C0">

    <TextView
        android:text="Age of Empires II"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/aoe2Header"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="#FF0000" />

    <TextView
        android:text="Age of Empires II: Age of Kings is set in the middle ages in Europe and allows you to contorl 13 different civilaztions through four different ages. The Dark, Feudal, Castle and Imperial Ages. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:layout_below="@+id/aoe2Header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="There are five historically based campaigns including Joan of Arc, Genghis Khan and William Wallace. The expansion includes Attila the Hun, Montezuma and El Cid "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Age of Empires II is considered the best of the series with the highest reviews."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:layout_below="@+id/text2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/aoe2"
        android:id="@+id/imageView5"
        android:layout_height="180dp"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Units"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/unitsButton"
        android:textColor="#FFFFFF"
        android:background="#3333FF"
        android:onClick="Units"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/backButton"
        android:onClick="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3333FF"
        android:textColor="#FFFFFF" />

    <Button
        android:text="AOE 3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/aoe3Button"
        android:textColor="#FFFFFF"
        android:background="#3333FF"
        android:onClick="AOE3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
